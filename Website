    line-height: 1.6;
}

/* Typography */
h1 { font-family: 'Outfit', sans-serif; font-size: 3.5rem; margin-bottom: 1rem; }
.gradient-text { background: linear-gradient(90deg, #0070f3, #f81ce5); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }

/* Navigation */
nav { display: flex; justify-content: space-between; padding: 2rem 5%; align-items: center; }

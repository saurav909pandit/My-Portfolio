/* Hero */
.hero { padding: 100px 5%; text-align: center; }

/* Bento Grid */
.bento-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-auto-rows: 200px;
    gap: 1.5rem;
    padding: 0 5% 100px 5%;
}

.item { 
